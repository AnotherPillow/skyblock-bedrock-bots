{
    "$$src": "https://www.npmjs.com/package/@tsconfig/node18",
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 18",

    "_version": "18.2.0",

    "compilerOptions": {
        "lib": ["es2023"],
        "module": "node16",
        "target": "es2022",

        "outDir": "build/",

        "allowSyntheticDefaultImports": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node16"
    }
} 